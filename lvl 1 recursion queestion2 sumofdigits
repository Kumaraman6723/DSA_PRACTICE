public class SumUsingRecursion {
    static int sumOfDigits(int n)
    {
        int sum=0;
        if(n==0)
        {
            return 0;
        }
        return (n%10)+sumOfDigits(n/10);


    }

    public static void main(String[] args) {
        int a=sumOfDigits(1234);
        System.out.println(a);
    }
}
